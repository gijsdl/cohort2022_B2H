{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <a href="{{ path('create_book') }}" class="btn btn-primary">Toevoegen</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">titel</th>
            <th scope="col">auteur</th>
            <th scope="col">pagina's</th>
            <th scope="col">beschrijving</th>
            <th scope="col">categorie</th>
            <th scope="col">acties</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.pages }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.category.name }}</td>
                <td>
                    <a href="{{ path('update_book', {id: book.id}) }}" class="btn btn-warning">Aanpassen</a>
                    <a href="{{ path('delete_book', {id: book.id}) }}" class="btn btn-danger">Verwijderen</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
